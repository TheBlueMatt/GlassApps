<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/statusText" android:layout_alignParentStart="true"
                android:layout_alignBaseline="@+id/prevButton"
                android:layout_column="0" android:layout_row="0"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PW"
                android:paddingLeft="5px" android:paddingRight="5px"
                android:id="@+id/previousWindowButton"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NW"
                android:paddingLeft="5px" android:paddingRight="5px"
                android:id="@+id/nextWindowButton" />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;&lt;"
                android:paddingLeft="5px" android:paddingRight="5px"
                android:id="@+id/prevButton" android:layout_toLeftOf="@+id/nextButton"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="||>"
                android:paddingLeft="5px" android:paddingRight="5px"
                android:id="@+id/playPauseButton" android:singleLine="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">>"
                android:paddingLeft="5px" android:paddingRight="5px"
                android:id="@+id/nextButton" />

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingLeft="5px" android:paddingRight="5px"
                android:id="@+id/volumeDownButton" />

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:paddingLeft="5px" android:paddingRight="5px"
                android:id="@+id/volumeUpButton" />
    </LinearLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"/>
</LinearLayout>
